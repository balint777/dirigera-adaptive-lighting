{
  "env": {
    "es2021": true
  },
  "extends": ["standard", "plugin:jsdoc/recommended-error"],
  "overrides": [
    {
      "env": {
        "node": true
      },
      "files": [
        ".eslintrc.{js,cjs}"
      ],
      "parserOptions": {
        "sourceType": "module"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "jsdoc/require-throws": 1,
    "jsdoc/sort-tags": 1,
    "no-tabs": "off",
    "indent": "off"
  },
  "plugins": [
    "jsdoc"
  ]
}
